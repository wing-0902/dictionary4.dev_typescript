---
interface Props {
  title?: string;
}

const { title = '' } = Astro.props; 
---

<div class="root">
  <div class="header">
    <div class="tab">
      <p>{title}</p>
    </div>
  </div>
  <div class="children">
    <slot />
  </div>
</div>

<style lang="scss">
  .root {
    margin: 8px auto;
    background-color: var(--codeBack);
    border-radius: 4px;
    border: 0.5px solid var(--borderColor);
    .header {
      display: flex;
      margin-bottom: -13px;
      background-color: var(--background);
      border-radius: 3.5px;
      border-bottom: 1px solid var(--themeColor);
      .tab {
        background-color: var(--codeBack);
        margin: auto 5px -1px 0;
        padding: 7px;
        min-width: 160px;
        max-width: calc(100% - 20px);
        align-items: center;
        border-radius: 10px 10px 0 0;

        p {
          margin: 0;
          font-family: var(--font-fira-code), var(--font-zen-kaku-gothic-new), monospace;
        }
      }
    }
    .children {
      margin: 0 0 -7px;
      padding: 0;
    }
  }
</style>