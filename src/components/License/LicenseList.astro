---
import licenseData from '../../data/license-data.json';

const packagesCounter = Object.keys(licenseData).length;
const licenseEntries = Object.entries(licenseData);
---

<section>
  <h2>ライセンス一覧</h2>
  <p>{packagesCounter}個のライセンスを表示中</p>
  <ul>
    {
      licenseEntries.map(([pkgName, pkgInfo]) => (
        <li>
          <a href=`/license/${encodeURIComponent(pkgName)}` >
            <h3>{pkgName}</h3>
            <span>ライセンス：{pkgInfo.licenses}</span>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style lang='scss'>
  section {
    h2 {
      font-size: 18px;
    }
    p {
      font-size: 15px;
    }
    ul {
      li {
        a {
          text-decoration: none;
          h3 {
            font-size: 16px;
            margin-bottom: 0;
            filter: brightness(120%);
          }
          span {
            font-size: 15px;
            filter: brightness(120%);
          }
          &:hover {
            h3 {
              text-decoration: underline;
              filter: brightness(100%);
            }
          }
        }
      }
    }
  }
</style>